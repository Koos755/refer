<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <p>
      <button type="button" class="btn btn-default btn-sm">1) Accept Referral</button>
      <button type="button" class="btn btn-primary btn-sm">2) Your Info</button>
      <button type="button" class="btn btn-default btn-sm">3) Next Steps</button>
    </p>
  </div>
</div><!-- end row 1 -->

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1>Almost done!</h1>
    <p class="lead">We just need a little more information.</p>

    <%= form_tag(@destination_url, method: :post, role: "form") do %>
      <div class="form-group">
        <br>
        <%= label_tag :broker_name, 'Is your name correct?' %>
        <%= text_field_tag :broker_name, current_user.name, placeholder: "Your Name", class: "form-control", required: true %>
      </div>
      <br>
      <p><strong>Lastly, we need a little more information about the brokerage.</strong></p>

      <div class="form-group">
        <%= text_field_tag :name, @brokerage.name, placeholder: "Brokerage Name", class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= text_field_tag :address, @brokerage.address, placeholder: "Street Address*", class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= text_field_tag :city, nil, placeholder: "City*", class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= select_tag :state, options_for_select(us_states), prompt: "- Select State* -", class: "form-control", required: true %>
      </div>
      <div class="form-group">
        <%= text_field_tag :zip, nil, placeholder: "Zip Code*", class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= button_tag "Update Brokerage Details", class: "btn btn-primary" %>
      </div>

    <% end %>
  </div>

<%= render 'layouts/remove_password_alert' %>
