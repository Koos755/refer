<%= bootstrap_form_for(user, url: destination_url) do |f| %>
  <%= f.text_field :name, placeholder: 'First & Last Name', hide_label: true, required: true  %>
  <%= f.email_field :email, placeholder: 'Email', hide_label: true, required: true  %>
  <%= f.password_field :password, placeholder: 'Password', hide_label: true, required: true  %>
  <%= f.submit button, :class => 'btn btn-primary', id: 'button' %>
<% end %>


